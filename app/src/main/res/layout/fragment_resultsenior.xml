<?xml version="1.0" encoding="utf-8"?><!-- THIS IS A LAYOUT TO DISPLAY SENIOR RESULTS -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ResultsFragment"
    android:background="@drawable/background_img"
    android:orientation="vertical"
    tools:context=".ResultsFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/navigationBarColor"
        android:theme="?attr/actionBarTheme"
        android:layout_marginTop="0dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:id="@+id/about_image"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/uok_logo"
                    android:contentDescription="About Image"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:id="@+id/about_heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/about_image"
                    android:gravity="center"
                    android:text="Voting For UOK Students Leaders"
                    android:textColor="@color/laven_txt"
                    android:textSize="34sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <TextView
                android:id="@+id/senior_vote_inst"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:padding="20dp"
                android:text="View Results For Executives"
                android:textColor="@color/laven_txt"
                android:textSize="19sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewResults"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="16dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
