<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ClosedVotingActivity"
    android:orientation="vertical"
    android:background="@drawable/background_img"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="16dp">

        <TextView
            android:id="@+id/closed_voting_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_marginLeft="15dp"
            android:textColor="@color/white"
            android:text="Voting has ended. Thank you for your participation."
            />

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/exitBtn"
        android:layout_below="@+id/closed_voting_message"
        android:textColor="@color/white"
        android:text="Exit"
        android:backgroundTint="@color/laven"
        android:layout_centerHorizontal="true"
        android:layout_margin="30dp"
        />
</LinearLayout>
