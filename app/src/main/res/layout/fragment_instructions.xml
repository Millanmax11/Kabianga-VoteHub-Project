<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/InstructionsFragment"
    android:background="@drawable/background_img"
    android:orientation="vertical"
    tools:context=".InstructionsFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/navigationBarColor"
        android:theme="?attr/actionBarTheme"
        android:layout_marginTop="0dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:id="@+id/about_image"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/uok_logo"
                    android:contentDescription="About Image"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:id="@+id/about_heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/about_image"
                    android:gravity="center"
                    android:text="Voting Terms and Conditions"
                    android:textColor="@color/laven_txt"
                    android:textSize="34sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <TextView
                android:id="@+id/del_vote_inst"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:padding="20dp"
                android:text="Vote for Delegate"
                android:textColor="@color/laven_txt"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/about_paragraph1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="@string/instruction1"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/senior_vote_inst"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:padding="20dp"
                android:text="Vote for Senior"
                android:textColor="@color/laven_txt"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/about_paragraph2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="@string/instruction2"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/dev_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="E-vote Rules"
                android:textColor="@color/laven_txt"
                android:textSize="24sp"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/account_icon"
                    android:layout_width="150dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/rules_img"
                    android:scaleType="centerCrop"
                    android:contentDescription="Account Icon"
                    android:layout_marginTop="0dp" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>
